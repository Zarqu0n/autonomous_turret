<robot name="two_joint_robot">
  <!-- Baz Link -->

  <link name="base_footprint"/>
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="rotator_1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 1 0 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="turret_endpoint">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.2"/>
      </geometry>
      <material name="black">
        <color rgba="0 1 0 1"/>
      </material>
      <origin xyz="0 0.11 0.15" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.2"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <link name="camera_sensor">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="purple">
        <color rgba="1 0 1 1"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertia>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertia>
  </link>


  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


  <joint name="rotator_1_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rotator_1"/>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5.0" velocity="1.0"/>
  </joint>

  <joint name="turret_endpoint_joint" type="fixed">
    <parent link="rotator_1"/>
    <child link="turret_endpoint"/>
    <origin xyz="0 0 0" rpy="1.57 0 0"/>
  </joint>

  <joint name="ir_sensor_joint" type="fixed">
    <parent link="rotator_1"/>
    <child link="camera_sensor"/>
    <origin xyz="0 0. 0.15" rpy="0 0 -1.57"/>
  </joint>



  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>
    <joint name="rotator_1_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>
  
  <gazebo>
    <plugin filename="libignition-gazebo-joint-position-controller-system.so" name="ignition::gazebo::systems::JointPositionController">
      <joint_name>rotator_1_joint</joint_name>
    </plugin>
  </gazebo>
  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>$(find autonomous_turret)/config/controller.yaml</parameters>
    </plugin>
  </gazebo>


  <gazebo>
    <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
</gazebo>

  <gazebo reference="camera_sensor">
    <sensor name="camera" type="camera">
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>1</visualize>
      <pose>0 0 0 0 -0 0</pose>
      <topic>image_raw</topic>
      <gz_frame_id>camera_sensor</gz_frame_id>
      <camera name="camera_sensor_cam">
        <camera_info_topic>camera_info</camera_info_topic>
        <horizontal_fov>1.21126</horizontal_fov>
        <image>
          <width>848</width>
          <height>480</height>
          <format>RGB_INT8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
    </sensor>
  </gazebo>

</robot>
