<robot name="two_joint_robot">
  <!-- Baz Link -->

  <link name="base_footprint"/>
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="rotator_1">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>


  <link name="turret_endpoint">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  

  <link name="ir_sensor">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="purple">
        <color rgba="1 0 1 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <inertia>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertia>
  </link>


  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- İlk Eklemi Tanımlama -->
  <joint name="rotator_1_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rotator_1"/>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- Turret Eklemi Tanımlama -->
  <joint name="turret_endpoint_joint" type="fixed">
    <parent link="rotator_1"/>
    <child link="turret_endpoint"/>
    <origin xyz="0 0.2 0.15" rpy="1.57 0 0"/>
  </joint>

  <joint name="ir_sensor_joint" type="fixed">
    <parent link="rotator_1"/>
    <child link="ir_sensor"/>
    <origin xyz="0 0.1 0.18" rpy="-1.57 0 0"/>
  </joint>


  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>
    <joint name="rotator_1_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>
  
  <gazebo>
    <plugin filename="libignition-gazebo-joint-position-controller-system.so" name="ignition::gazebo::systems::JointPositionController">
      <joint_name>rotator_1_joint</joint_name>
    </plugin>
  </gazebo>
  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>$(find autonomous_turret)/config/controller.yaml</parameters>
    </plugin>
  </gazebo>


  <gazebo>
    <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
</gazebo>

  <gazebo reference="ir_sensor">
    <material>Gazebo/Black</material>
    <sensor type="gpu_lidar" name="ir_sensor_lidar">
      <always_on>true</always_on>
      <update_rate>15.0</update_rate>
      <pose>0 0 0.1 0 -1.57 0</pose>
      <visualize>false</visualize>
      <topic>/scan</topic>
      <gz_frame_id>ir_sensor</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>-0.00001</min_angle>
            <max_angle>0.00001</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.001</min>
          <max>30.0</max>
          <resolution>1.0</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.005</mean>
          <stddev>0.003</stddev>
        </noise>
      </lidar>
    </sensor>
    <static>true</static>
  </gazebo>


</robot>
