<robot name="two_joint_robot">
  <!-- Baz Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- İlk Link -->
  <link name="rotator_1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- İkinci Link -->
  <link name="rotator_2">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Turret link -->

  <link name="turret_endpoint">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  

  <link name="ir_sensor">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="purple">
        <color rgba="1 0 1 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
    </collision>
    <inertia>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertia>
  </link>

  <link name="led_link">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="purple">
        <sphere radius="0.01"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- İlk Eklemi Tanımlama -->
  <joint name="rotator_1_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rotator_1"/>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- İkinci Eklemi Tanımlama -->
  <joint name="rotator_2_joint" type="revolute">
    <parent link="rotator_1"/>
    <child link="rotator_2"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="0" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- Turret Eklemi Tanımlama -->
  <joint name="turret_endpoint_joint" type="fixed">
    <parent link="rotator_2"/>
    <child link="turret_endpoint"/>
    <origin xyz="0 0 0" rpy="1.57 0 0"/>
  </joint>

  <joint name="ir_sensor_joint" type="fixed">
    <parent link="turret_endpoint"/>
    <child link="ir_sensor"/>
    <origin xyz="0 0.02 0" rpy="0 0 0"/>
  </joint>

  <joint name="led_joint" type="fixed">
    <parent link="rotator_2"/>
    <child link="led_link"/>
    <origin xyz="0 0. 0.001" rpy="0 0 0"/>
  </joint>

</robot>
